---
import Section from "@/components/Section.astro";

import { projects } from '@cv';

---

<Section title="Personal Projects">
    <div class="project-status no-print">
        <span class="project-enabled">&bull;</span>
        <p>Project in development</p>
    </div>
    <ul>
        {projects.map(({ description, highlights, name, isActive, url }) => {
            return (
                <li>
                    <article>
                        <header>
                            <h3>
                                <a href={url} title={`See project ${name}`} target="_blank">
                                    {name}
                                </a>
                                {
                                    isActive ? <span class="project-enabled no-print">&bull;</span> : <span class="project-disabled no-print">&bull;</span>
                                }
                            </h3>
                            <p>{description}</p>
                        </header>
                        <footer>
                            {highlights.map((highlight) => {
                                return (
                                    <span>
                                        {highlight}
                                    </span>
                                )
                            })}
                        </footer>
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style>
    .project-status {
        display: inline-flex;
        gap: 4px;
    }

    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    .project-enabled {
        color: #07e43e;
    }

    .project-disabled {
        color: #d61d05;
    }

    article a {
        color: #111;   
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }
    
    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        background: #eee;
        font-size: .6rem;
        font-weight: 500;
        color: #444;
        padding: 0.2rem 0.6rem;
    }
</style>