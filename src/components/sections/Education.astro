---
import Section from "@/components/Section.astro";
import TimedData from "@/components/TimedData.astro";

interface Props {
    education: typeof import('@cv').education;
}

const { education } = Astro.props;

---

<Section title="Education">
    <ul>
        {education.map(({ institution, area, studyType, startDate, endDate }) => {
            const startYear = new Date(startDate).getFullYear();
            const endYear = endDate !== null ? new Date(endDate).getFullYear() : "Present";
            const years = `${startYear} - ${endYear}`;
            return (
                <li>
                    <TimedData title={area} subtitle={institution} time={years} description={studyType} />
                </li>
            )
        })}
    </ul>
</Section>