---
interface Props {
  title: string;
  subtitle: string;
  time: string;
  description: string;
}

const { title, subtitle, time, description } = Astro.props;
---

<article>
  <header>
    <div>
      <h3>{title}</h3>
      <h4>{subtitle}</h4>
    </div>
    <time>{time}</time>
  </header>

  <footer>
    <p>{description}</p>
  </footer>
</article>

<style>
  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
